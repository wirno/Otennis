<%= render 'partial/navbar' %>

<div class="page-wrapper" style="height:100%">
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <%= form_for(:filters, :url => matchmaking_parameters_path, :html => {:class => 'form'}) do |f| %>
        <h6 class="title">Où ?</h6>
        <div class="sidebar-line"></div>
        <li>
          <%= f.label :ville %>
          <%= f.text_field :ville, class: 'city', placeholder: 'Ville' %>
        </li>
        <li>
          <%= f.label :rayon %>
          <%= f.select :radius, [['10 KM','10'], ['20 KM','20'], ['30 KM','30']]%>
        </li>
        <h6 class="title">Caractéristiques</h6>
        <div class="sidebar-line"></div>
        <li>
          <%= label :sexe_homme, 'Homme', class: 'gender-label' %> <%= f.radio_button :sexe, 'Homme' %> 
          <%= label :sexe_femme, 'Femme', class: 'gender-label' %> <%= f.radio_button :sexe, 'Femme' %>
        </li>
        <li>
          <%= f.label :age_entre %>
          <%= f.text_field :age1, class: 'city' %>
          <%= f.label :et %>
          <%= f.text_field :age2, class: 'city' %>
        </li>
        <li>
          <%= f.label :niveau_de_tennis %>
          <%= f.select :niveau, ['', 'Novice', 'Debutant', 'Experimenté', 'expert', 'pro']%>
        </li>
        <li>
          <%= f.submit "rechercher", class: 'btn btn-primary' %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="page-content-wrapper">
    <div class="container-fluid">
      <div class="row">
      <% @users.each do |user| %>
        <div class="col-lg-3 col-md-4 col-sm-12">
          <div class="search-profile">
            <div class="col-md-6 col-sm-12">
                <% if user.avatar.present? %>
                  <%= image_tag(user.avatar, alt: 'Your upload jacket', style: "width:100%") %>
                <% else %>
                  <%= image_tag('jacket-default', alt: 'Your upload jacket') %>
                <% end %>
              <%= link_to 'Consulter', users_find_profile_path(user) %>
            </div>
            <div class="col-md-6 col-sm-12">
              <h1><%= user.nom %> <%= user.prenom %></h1>
              <h2>@<%= user.pseudo %></h2>

              <span><%= user.genre %></span>
              <span><%= user.calcAge %> ans</span>
              <span><%= user.ville %> <%= user.cp %></span>
              <span><%= user.tennislevel %></span>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>