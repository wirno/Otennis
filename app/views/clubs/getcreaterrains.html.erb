<%= render 'partial/navbar' %>

<%= form_for(:paramterrain, url: clubs_profile_create_terrains_path, html: { method: :post }) do |f| %>

  <div class="form-group">
    <%= f.label :nom %>
    <%= f.text_field :nom, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= f.label :surface %>
      <%= f.select :surface, [['Terre battu','terre'], ['Gazon','gazon'], ['Surface dur','dur']]%>
  </div>

  <div class="form-group">
    <%= f.label :Importer_votre_avatar_ici%>
    <%= f.file_field :avatar, id: "avatar-upload" %>
  </div>

  <%= f.submit "Update", class: 'btn btn-primary' %>
<% end %>
