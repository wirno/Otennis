<%= render "partial/navbar" %>

<h1>Clubs#settings</h1>
<p>Find me in app/views/clubs/settings.html.erb</p>

<%= form_for(:filters, :url => clubs_search_path, :html => {:class => 'form'}) do |f| %>
  	<div class="form-group">
	    <%= f.label :nom %>
	    <%= f.text_field :nom, class: 'form-control' %>
	</div>

  	<div class="form-group">
	    <%= f.label :ville %>
	    <%= f.text_field :ville, class: 'form-control' %>
	</div>

	<div class="form-group">
	    <%= f.label :rayon %>
	    <%= f.select :radius, [['10 KM','10'], ['20 KM','20'], ['30 KM','30']]%>
	</div>

    <%= f.submit "rechercher", class: 'btn btn-primary' %>
<% end %>
<div class="row">
<% @clubs.each do |club| %>
  <div class="col-md-4">
  	<div class="thumbnail">
    <%= link_to clubs_find_profile_path(club) do %>
        <div class="caption">
          <p><%= club.nom %></p>
          <p><%= club.ville %> - <%= club.cp %> - <%= club.adresse %></p>
          <p><%= club.description %></p>
        </div>
    <% end %>
    </div>
  </div>
<% end %>
</div>