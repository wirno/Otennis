<%= render 'partial/navbar' %>
<div class="row topprofil">
   <div class="col-md-6 col-md-offset-3 topprofil">
      <div class="row">
         <div class="col-md-4">
            <div><%= @club.nom %></div>
            <div><%= @club.description %></div>
            <div><%= @club.telephone %></div>
            <br>
         </div>
         <div class="col-md-4 img_milieu">
            <% if @club.avatar.present? %>
            <%= image_tag(@club.avatar, size: '150x150', alt: 'Your upload jacket',:class => "img_profil") %>
            <% else %>
            <%= image_tag('jacket-default', size: '150x150', alt: 'Your upload jacket' ,:class => "img_profil") %>
            <% end %>            </div>
         <div class="col-md-4">
            <div><%= @club.adresse %></div>
            <div><%= @club.cp %></div>
            <div><%= @club.ville %></div>
         </div>
      </div>
   </div>
</div>
<hr>
<div class="row tabsprofil">
   <div id="tabs" class="col-md-12 ">
      <ul class="nav nav-tabs col-md-offset-2">
         <li class="active"><a data-toggle="tab" href="#home">Descriptif</a></li>
         <% if(@terrains.present?) %>
         <li><a data-toggle="tab" href="#menu1">Terrains</a></li>
         <% end %>
      </ul>
      <div class="tab-content">
         <div id="home" class="tab-pane fade in active">
            <p><%= @club.description %></p>
         </div>
         <div id="menu1" class="tab-pane fade">
            <div class="row">
               <div class="col-md-6 col-md-offset-2">
                  <div class="row">
                  <% @terrains.each do |terrain| %>
                     <div class="col-sm-4">
                        <div class="row">
                           <div class="col-sm-3">
                           <% if terrain.avatar.present? %>
                              <%= image_tag(terrain.avatar, size: '150x150', alt: 'Your upload jacket',:class => "img_reseau") %>
                              <% else %>
                              <%= image_tag('jacket-default', size: '150x150', alt: 'Your upload jacket' ,:class => "img_reseau") %>
                              <% end %>   
                            <%= link_to 'Consulter', terrains_find_profile_path(terrain) %>
                           </div>
                           <div class="col-sm9 description_reseau">
                              <p class="namelink"><%= terrain.nom %><br><span class="pseudolink"><%= terrain.surface %></span></p>
                           </div>
                        </div>
                     </div>
                     <% end %>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
<%= render 'partial/footer' %>