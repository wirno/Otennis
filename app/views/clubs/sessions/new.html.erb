<%= render 'partial/navbar' %>


<div class="page-login-wrapper">
  <div class="form-container">
    <h2>Connexion</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, class: 'login_field', placeholder: 'Email' %>
        <%= f.password_field :password, autocomplete: 'off', class: 'login_field', placeholder: 'Mot de passe' %>
        <%= f.submit 'Connexion', class: 'login-submit' %>
    <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: 'forgot' %><br/>
      <% end -%>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Vous n'avez pas de compte ? Inscrivez vous", new_registration_path(resource_name), class: 'sign_up'%><br/>
      <% end -%>
  </div>
</div>